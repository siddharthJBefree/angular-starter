{
  "name": "angular-starter",
  "version": "0.0.4",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "posttest": "npm run format",
    "serve:ssr:angular-starter": "node dist/angular-starter/server/server.mjs",
    "lint": "ng lint",
    "postlint": "npm run format",
    "format": "prettier --log-level log --write \"**/*.{html,yml,js,jsx,ts,tsx,css,json,scss,md,sh,sql,nginx,nginxconf}\" --config .prettierrc",
    "analytics-disabled": "ng analytics disable --global && ng analytics disable ",
    "git-fresh": "git removed-branches --prune -f",
    "check-memory-limit": "node -e 'console.log(v8.getHeapStatistics().heap_size_limit/(1024*1024))'",
    "increase-memory-limit": "setx NODE_OPTIONS \"--max-old-space-size=20480\"",
    "prepare": "npm i @angular/cli@19.2.0 husky lint-staged prettier npm-run-all npkill git-removed-branches javascript-obfuscator -g && husky install",
    "s-prod": "ng serve --configuration=\"production\"",
    "s-qa": "ng serve --configuration=\"qa\"",
    "b-prod": "ng build --configuration=\"production\"  && git add -A && git commit -m \"Build Production\" && git push",
    "b-qa": "ng build --configuration=\"qa\"  && git add -A && git commit -m \"Build QA\" && git push"
  },
  "private": true,
  "dependencies": {
    "@angular-architects/ngrx-toolkit": "^19.1.0",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/service-worker": "^19.2.0",
    "@angular/ssr": "^19.2.0",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@ngrx/signals": "^19.0.1",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "ngx-hover-preload": "^0.0.5",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.0",
    "@angular/cli": "^19.2.0",
    "@angular/compiler-cli": "^19.2.0",
    "@inquirer/prompts": "^7.5.3",
    "@ngrx/eslint-plugin": "^19.0.1",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "angular-eslint": "19.1.0",
    "eslint": "^9.20.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.2",
    "prettier-plugin-nginx": "^1.0.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sh": "^0.15.0",
    "prettier-plugin-sql": "^0.18.1",
    "typescript": "~5.7.2",
    "typescript-eslint": "8.23.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "**/*.{html,yml,js,jsx,ts,tsx,css,json,scss,md,sh,sql,nginx,nginxconf}": "prettier --write"
  },
  "buildVersions": {
    "angular-starter__production": "0.0.4",
    "angular-starter__qa": "0.0.3"
  }
}
